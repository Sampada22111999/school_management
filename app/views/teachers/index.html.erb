<p style="color: green"><%= notice %></p>

<div class="d-flex align-items-center justify-content-between">
  <h1>Teachers</h1>
  <%= link_to "New teacher", new_teacher_path, class: 'button-4' %>
</div>

<div id="teachers">
    <table class="table table-responsive">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Subject</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @teachers.each do |teacher| %>
          <tr>
            <td><%= teacher.id %></td>
            <td><%= teacher.name %></td>
            <td><%= teacher.subject %></td>
            <td><%= link_to 'Show', teacher_path(teacher),class: 'button-4' %></td>
            <td><%= link_to 'Edit', edit_teacher_path(teacher),class: 'button-4' %></td>
            <td><%= form_with model: teacher, method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: 'inline-form' do |form| %>
                <%= form.submit 'Destroy', class: 'button-4', data: { confirm: 'Are you sure?' } %>
              <% end %>
            </td>          
          </tr>
        <% end %>
      </tbody>
    </table>


</div>

